{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@components": ["src/lib/components"],
			"@components/*": ["src/lib/components/*"],
			"@utils/*": ["src/utils/*"],
			"@utils": ["src/utils"],
			"@api": ["src/api"],
			"@api/*": ["src/api/*"],
			"@lib": ["src/lib"],
			"@lib/*": ["src/lib/*"]
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte", "src/api/strapi.ts"]
}
